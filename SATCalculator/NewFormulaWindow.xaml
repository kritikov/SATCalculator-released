<Window x:Class="SATCalculator.NewFormulaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SATCalculator"
        mc:Ignorable="d"
        Title="New Formula" Height="192" Width="500" WindowStartupLocation="CenterScreen">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Give the new formula using the form (1, 2, -3)^(-2, 3, 4)"/>
        <TextBox Grid.Row="1" Text="{Binding FormulaString, Mode=TwoWay}" HorizontalAlignment="Stretch" 
                 ScrollViewer.HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
            <Button Content="Create" Click="CreateFormula"/>
            <Button Content="Cancel" Click="Cancel"/>
        </StackPanel>
        <TextBlock Grid.Row="3" Text="{Binding Message}"/>

    </Grid>
</Window>
